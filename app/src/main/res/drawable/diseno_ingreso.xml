<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color de fondo cuando se presiona (blanco) -->
            <corners android:radius="5dp" /> <!-- Radio de esquinas cuando se presiona -->
        </shape>
    </item>

    <!-- Estado enfocado -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <!--  <solid android:color="#0000FF" />  Color de fondo cuando se enfoca (azul) -->
            <corners android:radius="5dp" /> <!-- Radio de esquinas cuando se enfoca -->
        </shape>
    </item>

    <!-- Estado normal (ningÃºn estado activo) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color de fondo normal (blanco) -->
            <stroke android:width="1dp" android:color="#0000FF" /> <!-- Borde azul -->
            <corners android:radius="5dp" /> <!-- Radio de esquinas normales -->
        </shape>
    </item>

</selector>
